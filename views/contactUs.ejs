<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Cabin:wght@400;500&family=Concert+One&family=Oswald:wght@300&family=Roboto:ital,wght@1,500&family=Source+Sans+Pro:ital,wght@0,200;0,400;1,200&display=swap');
      </style>
  <style>
    body {
      background-image: url('../backgroundImages/contactUsBackground.jpg');
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: 100% 100%;
      width: 100vw;
      height: 100vh;
      font-family: 'Cabin', sans-serif;
    }


    .flex-class {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      height: 100vh;
      width: 100vw;
    }

    .white-color {
      color: black;
      
    }

    /* .form-container{
        margin-left: 250px;
      } */
    .mydetails-container {
      padding-top: 110px;
    }

    .center {
      text-align: center;
    }

    #myform {
      width: 350px;
      margin: auto;
    }
  </style>
  <title>Contact Us</title>
</head>

<body>



  <div class="white-color center">
    <h1>Contact Us</h1>
    <h2>We would love to hear from you</h2>
    <h3>Help us to improve</h3>
  </div>

  <div class="flex-class white-color">
    <div class="form-container" style="flex-grow: 1;">
      <div id="messageStatus" class="alert alert-dismissible fade show" role="alert" style="display: none;">
        <span id="status"></span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <form id="myform">


        <div class="mb-3">
          <img src="https://cdn.iconscout.com/icon/premium/png-256-thumb/user-3265279-2740759.png" alt=""
            style="  float: left; height: 25px; width: 25px;">


          <label for="name" class="form-label">Name</label>
          <input name="name" type="text" class="form-control" id="name">
        </div>

        <div class="mb-3">
          <img src="../contactUsImages/telephone.png" alt=""
            style="  float: left; height: 25px; width: 25px;">

          <label for="phone" class="form-label">Phone</label>
          <input name="phone" type="tel" class="form-control" id="phone">
        </div>
        <div class="mb-3">
          <img src="../contactUsImages/gmail.svg" alt=""
            style="float: left; height: 25px; width: 25px;">

          <label for="email" class="form-label">Email address</label>
          <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>

        <div class="mb-3">
          <label for="message" class="form-label">Message</label>
          <textarea name="message" class="form-control" id="message"></textarea>
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <div class="mydetails-container center" style="flex-grow: 2;">

      <img src="../contactUsImages/telephone.png" alt="" style=" height: 35px; width: 35px;">
      <h4>(+91) 7982959272</h4>
      <p style=" font-size: small;">Mobile (personal)</p>
      <img src="../contactUsImages/gmail.svg" alt="" style=" height: 35px; width: 35px;">
      <h4>shantys502@gmail.com</h4>
      <p style=" font-size: small;">Gmail (personal)</p>


    </div>

  </div>

  <script>
    document.getElementById("myform").onsubmit = (e) => {
      e.preventDefault()
      
      let url = "http://localhost:3000/contactUs"
      let data = new URLSearchParams()

      for (const pair of new FormData(e.target)) {

        data.append(pair[0], pair[1])
      }
      fetch(url, {
        method: "post",
        body: data,

      }).then(res => res.json())
        .then(result => {

         
          if (result.success == true) {
            document.getElementById("messageStatus").style.display = "block";

            document.getElementById("messageStatus").classList.add('alert-success');
            document.getElementById('status').innerText = "message sent succesfully"

            // location.reload()
          } else {
            document.getElementById("messageStatus").style.display = "block";

            document.getElementById("messageStatus").classList.add('alert-danger');
            document.getElementById('status').innerText = "Error in sending message"
          }

        }).catch(err => console.log(err))

    }
  </script>
  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
    crossorigin="anonymous"></script>

