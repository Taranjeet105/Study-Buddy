<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="../style/style.css">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Pacifico&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Roboto:ital@1&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@300&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Concert+One&family=Oswald:wght@300&family=Source+Sans+Pro:ital,wght@0,200;0,400;1,200&display=swap');
 
    body {
      background-image: url('../backgroundImages/subjectsB.jpg');
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: 100% 100%;
      width: 100vw;
      height: 100vh;

    }
    .card{
     
      opacity: 0.8; width: 200px;
    }
    .card:hover{
      opacity:1;
    }

    .flex-class {
      display: flex;
      flex-wrap: wrap;
      
      /* justify-content: space-between; */
    
    }

    .flex-class2 {
      display: flex;

    }

    .flex-elem2 {
      flex-basis: 200px;
    }
    .flex-elm1{
      width: 90%;
    }

    .style1 {
      font-family: 'Oswald', sans-serif;
    }

    .style2 {
      font-family: 'Roboto', sans-serif;
    }

    .style1css {
      color: darkorange;
      font-size: 25px;
    }
    .parent{
      position: absolute;
      right: 10px;
      width: 19%;
    }
    .container{
      margin-left: 0px;
    }
 
  </style>

  <title>subject page!</title>
</head>

<body>


  <%- include('partials/navbar2') %>
    <div class=" flex-class">


      <div class="container flex-class ">
        <div class="flex-elm1" style="margin-top: 10px;">
          <div class=" flex-class">

            <% let counter=0 %>
              <% let counterimg=0 %>
                <% let imgtype=["book","study","library"] %>
                  <% userInfo.subjects.forEach(subject=>{ %>
                    <div class="card style1 "  id=<%=counter.toString()%> >
                      <% let imgtoshow="https://source.unsplash.com/1600x900/?"+imgtype[counterimg]%>
                        <img src=<%=imgtoshow %> class="card-img-top" alt="image is not loaded">
                        <div class="card-body">
                          <h4 class="card-title"><%= subject.subject.name %>
                          </h4>
                          <p class="card-text"><%= subject.subject.description %>
                          </p>
                        </div>

                        <div class="card-body">
                          <% let url="/chapters/" +counter.toString() %>
                            <% let url2="/deleteSubject/" +counter.toString() %>
                              <button type="button" onclick="return confirm('Do you really want to delete?')" class="btn btn-danger" class="deleteSubject"> <a href=<%=url2 %>
                                  class="card-link">Delete</a></button>


                              <button type="button" class="btn btn-info" class="deleteSubject"><a href=<%=url %>
                                  class="card-link">Chapters</a></button>

                        </div>
                    </div>

                    <% counter=counter+1 %>
                      <% counterimg=(counterimg+1)%3 %>

                        <% }) %>
          </div>
        </div>
        <!-- <button type="button" class="btn btn-dark add-subject" id="add-subjects">Add Subject</button> -->


        <!-- Button trigger modal -->



      </div>

      <div class="parent">
        <div class="formContainer">
          <form id='dateAndTime' >
            <div class="mb-3">
              <label for="timedate" class="form-label style1 style1css">Set Time</label>
              <input name="timedate" type="datetime-local" class="form-control " id="timedate">
            </div>

            <div class="mb-3">
              <label for="message" class="form-label style1 style1css">Message </label>
              <textarea name="message" type="datetime-local" class="form-control" id="message"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>


    <script>
        document.getElementById("dateAndTime").onsubmit=(e)=>{
        e.preventDefault()
        // console.log(e.target)
        let  url=("https://studdy-buddyy.herokuapp.com/setReminder")
        let localTime=document.getElementById('timedate').value
        let message=document.getElementById('message').value
        console.log(localTime)
        let date = new Date(localTime); 
        console.log(date.toString())
        var now_utc =  Date.UTC(date.getUTCFullYear(), date.getUTCMonth(), date.getUTCDate(),
          date.getUTCHours(), date.getUTCMinutes(), date.getUTCSeconds());
         
       let utcnow= new Date(now_utc);
       console.log(utcnow)

       let data={
                setTime:now_utc,
                localTime:localTime,
                message:message
                    }
         fetch(url,{
                    method:"post",
                    body:JSON.stringify(data),
                    headers: {
                    'Content-Type': 'application/json'
      
                    },
                }).then(res=>res.text())
                .then(result=>{
                   location.reload()
                }).catch(e=>console.log(e))
               
            }
    </script>
    

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Add Subject</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/addSubject" method="POST">
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Subject name: </label>
                  <input type="text" class="form-control" id="exampleInputEmail1" name="subject_name"
                    aria-describedby="emailHelp">

                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Description</label>
                  <input type="text" class="form-control" id="exampleInputPassword1" name="subject_description">
                </div>
                <div class="mb-3 form-check">
                  <input type="checkbox" class="form-check-input" id="exampleCheck1">
                  <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
            <div class="modal-footer">

              <button type="button" class="btn btn-secondary " data-bs-dismiss="modal">Close</button>


            </div>
          </div>
        </div>
      </div>


    

    <script>
      document.getElementById('plus').style.display = "block"
    </script>

