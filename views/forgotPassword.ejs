<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Forgot Password</title>
</head>
<body>

    <h1 style="text-align: center;">Enter your email</h1>
    <div class="container">
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">@</span>
        <input type="email" class="form-control" id="email_forgot_password" placeholder="email" aria-describedby="basic-addon1">
        <!-- <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1"> -->
        <button id="get_otp" class="btn btn-dark">Submit</button>
        <!-- <button id="get_otp">Submit</button> -->
      </div>
    </div>
   
    <!-- <input type="text" id="email_forgot_password" placeholder="email"/> -->
    
</body>

<script>
    document.getElementById('get_otp').addEventListener('click',async()=>{
        var email = document.getElementById('email_forgot_password').value
        if(!email || email.length == 0)
        {
            window.alert('Please provide a valid Email ID')
            return;
        }

        var data = await fetch('/forgotPassword',{
            method:'PUT',
            headers:{
                'Content-Type' : 'application/json'
            },
            body:JSON.stringify({
                email,
            })
        }).then(res=>res.json())

        if(data.status == false)
        {
            window.alert('Wrong email address')
            return;
        }

        window.alert(data.message)
    
        // window.location.replace('/resetPassword')

        
    })
</script>

</html>